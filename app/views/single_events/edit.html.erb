
<div class="panel panel-default">
	<div class="panel-heading"><h2>Uredi predavanje</h2></div>
		<div class="panel-body">
		<div class="well well-lg">
			<%= semantic_form_for @event do |f| %>
				<%= f.inputs do %>
				<div id="section-details">
					<%= f.input :start, :label => "Vrijeme početka:", :as => :time_picker, :input_html => {:class => 'form-control'}  %></br>

					<%= f.input :end, :label => "Vrijeme završetka:", :as => :time_picker, :input_html => {:class => 'form-control'} %></br>

					<%= f.input :where, :label => "Mjesto predavanja",  :as => :select, :input_html => {:class => 'form-control'} %></br>

					<%= f.input :date, :label => "Datum:", :as => :date_picker, :input_html => {:class => 'form-control', :value => f.object.date.strftime('%Y-%m-%d') } %></br>

					<%= f.input :odrzano, :label => "Odrzano"%></br>

					<div class="form-group">
					<%= f.input :uceniks, :label => "Popis učenika", :as => :check_boxes , :collection => Ucenik.includes(:groups).where(:groups => {:id => @event.group_id})%>

					</div>
					</div>
				<% end %>
				<%= f.actions do %>
					<%= f.action :submit, :as => :button, :button_html => {:class => 'btn btn-primary'}%></br>
			      	<%= f.action :cancel, :as => :link, :button_html => {:class => 'btn btn-default'} %>
			    <% end %>
			<% end %>
			</div>
	</div>
</div>
